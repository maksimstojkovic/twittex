<%= turbo_frame_tag "follow_#{user.id}", class: "model-button" do %>
  <p class="follow-count"><%= pluralize user.followers.count, "follower" %></p>

  <% if current_user != user %>
    <% if Follow.exists?(followee: user, follower: current_user) %>
      <%= button_to "Unfollow", follow_path, params: { follow: { followee: user } }, method: :delete %>
    <% else %>
      <%= button_to "Follow", follow_path, params: { follow: { followee: user } } %>
    <% end %>
  <% end %>
<% end %>
