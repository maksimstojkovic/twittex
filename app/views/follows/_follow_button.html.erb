<%= turbo_frame_tag [ "follow", user.id ] do %>
  <% if current_user != user %>
    <% if Follow.exists?(followee: user, follower: current_user) %>
      <%= button_to "Unfollow", follow_path, params: { follow: { user: user } }, method: :delete %>
    <% else %>
      <%= button_to "Follow", follow_path, params: { follow: { user: user } } %>
    <% end %>
  <% end %>
<% end %>
