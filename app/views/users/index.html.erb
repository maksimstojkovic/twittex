<div class="users-index">
  <h1>Users</h1>

  <% if @users.any? %>
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= link_to "#{user.name} (@#{user.username})", user_path(user) %>
          <%= render "follows/follow_button", user: user %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No users found.</p>
  <% end %>
</div>
