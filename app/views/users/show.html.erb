<h1><%= "#{@user.name} (@#{@user.username})" %></h1>

<%= render "follows/follow_button", user: @user %>

<h2>Posts</h2>

<% if @user == current_user %>
  <%= render "posts/form", post: Post.new %>
<% end %>

<div id="posts">
  <% @user.posts.each do |post| %>
    <%= render post, post_link: true %>
  <% end %>
</div>
